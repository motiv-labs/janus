{
    "name" : "posts",
    "active" : true,
    "proxy" : {
        "preserve_host" : false,
        "listen_path" : "/posts/*",
        "upstream_url" : "https://jsonplaceholder.typicode.com/posts",
        "strip_path" : true,
        "append_path" : false,
        "methods" : ["ALL"],
        "hosts": ["hellofresh.*"]
    },
    "health_check": {
        "url": "https://jsonplaceholder.typicode.com",
        "timeout": 10
    },
    "plugins": [
        {
            "name": "cors",
            "enabled" : true,
            "config": {
                "domains" : [
                    "*"
                ],
                "methods" : [
                    "GET",
                    "POST",
                    "PUT",
                    "PATCH",
                    "DELETE"
                ],
                "request_headers" : [
                    "Origin",
                    "Authorization",
                    "Content-Type"
                ],
                "exposed_headers" : [
                    "X-Debug-Token",
                    "X-Debug-Token-Link"
                ]
            }
        },
        {
            "name": "rate_limit",
            "enabled" : true,
            "config": {
                    "limit" : "10-S",
                    "policy": "local"
            }
        },
        {
            "name": "oauth2",
            "enabled" : true,
            "config": {
                "server_name": "local"
            }
        },
        {
            "name": "compression",
            "enabled": true
        },
        {
            "name": "request_transformer",
            "enabled" : true,
            "config": {
                "add" : {
                   "headers": {
                        "TEST": "TEST"
                   },
                   "querystring": "test"
                }
            }
        }
    ]
}
